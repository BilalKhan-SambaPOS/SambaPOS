@model IEnumerable<SambaPOS_MVC3.Models.DropdownProductTimer>
@{
    ViewBag.Title = "AddProductTimer";
}

<div>
    <div style="background-color: burlywood;line-height: 220%;margin-left: 10%;margin-right: 10%">
        <label style="font-size:16pt;padding-left:10px" >Product Timer Definition</label>
    </div>
    <div style="margin-left: 10%;margin-right: 10%;margin-top:10px">
        <table>
            <tr>
                <td style="width:12%">
                    <label >Name*:</label>
                </td>
                <td>
                    <input type="text" id="txtName" />
                </td>
            </tr>
            <tr>
                <td style="width:12%">
                    <label >Price Duration Type*:</label>
                </td>
                <td>
                  @Html.DropDownList("ProductTimerID", new SelectList(ViewBag.ListProductTimer, "ProductTimerID", "ProductTimer"))
                </td>
            </tr>
            <tr>
                <td style="width:12%">
                    <label >Price Duration:</label>
                </td>
                <td>
                    <input type="text" id="txtPriceDuration" placeholder="0" />
                </td>
            </tr>
            <tr>
                <td style="width:12%">
                    <label >Min Time:</label>
                </td>
                <td>
                    <input type="text" id="txtMinTime" placeholder="0" />
                </td>
            </tr>
            <tr>
                <td style="width:12%">
                    <label >Time Rounding:</label>
                </td>
                <td>
                    <input type="text" id="txtTimeRounding" placeholder="0" />
                </td>
            </tr>
            <tr>
                <td style="width:12%">
                    <label >Start Time:</label>
                </td>
                <td>
                    <input type="text" id="txtStartTime" placeholder="0" />
                </td>
            </tr>
            </table>
    </div>
        <div style="height:70px;margin-left: 10%;margin-right: 10%;margin-top:10px">
        <table class="tableForManage">
            <tr class="tableTr">
                <td style="float:right">
                    <input class="buttonCustom" type="button" value="Save"  />
                </td>
                <td style="float:right">
                    <input class="buttonCustom" type="button" value="Back" onclick="location.href='@Url.Action("ProductTimer", "Product")    '" />
                </td>
            </tr>
        </table>
    </div>
</div>

